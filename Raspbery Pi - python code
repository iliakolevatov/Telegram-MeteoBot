import time
import random

import telepot
import serial
from picamera import PiCamera
from time import sleep
from telepot.loop import MessageLoop

"""
- `/data` - reply with the sensor data.
- `/photo` - reply with a photo.
"""
camera = PiCamera()
camera.rotation = 180

data = 'Humidity (%): 24.00 \n Temperature DHT (C): 33.00 \n Temperature KY (C): 32.49'
Humidity = data[14:19]
Temperature = data[42:48]

